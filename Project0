        System.exit(0);
      }
JOptionPane.showMessageDialog(null, "The Number of E:"+numUp(inputWord)+"\n"+"The Number of e:"+numLow(inputWorld,"e"+numLow(inputWord,"e")),JOptionPane.INFORMATION_MESSAGE);
    }

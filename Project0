import javax.swing.JOptionPane;


public class Project0 {
  private static final String World = null;
public static void main(String[] args){
    String inputWorld;
    while(true){
      inputWorld=JOptionPane.showInputDialog(null,"Please enter a sentence","Input",JOptionPane.QUESTION_MESSAGE);
      if(inputWorld.equalsIgnoreCase("STOP")){
        System.exit(0);
      }
String inputWord = null;
JOptionPane.showMessageDialog(null, "The Number of E:"+numUp(inputWord)+"\n"+"The Number of e:"+numLow(inputWorld),inputWord, JOptionPane.INFORMATION_MESSAGE);
    }
  }
public static int numUp(String Word){
  int count = 0;
  for(int i=0;i<World.length();i++){
    if("E".equals(Word.charAt(i)+"")){
      count++;
    }
  }
  return count;
  }
public static int numLow(String Word){
  int count = 0;
  for(int i=0;i<World.length();i++){
    if("e".equals(Word.charAt(i)+"")){
      count++;
    }
}
  return count;
}
}

public static int numUp(String word){
  int count = 0;
  for(int i=0;i<world.length();i++){
    if("E".equal(word.charAt(i)+"")){
      count++;
    }
  }
  return count;
  }
public static int numLow(String word){
  int count = 0;
  for(int i=0;i<world.length();i++){
    if("e".equal(word.charAt(i)+"")){
      count++;
    }
}
  return count;
}
}
